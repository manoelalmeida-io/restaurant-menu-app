<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.restaurantmenu.menu.MenuFragment"
        android:label="MarsCafe"
        tools:layout="@layout/fragment_menu">
        <action
            android:id="@+id/action_menuFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_menuFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.restaurantmenu.detail.DetailFragment"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="dishId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.restaurantmenu.cart.CartFragment"
        android:label="@string/carrinho"
        tools:layout="@layout/fragment_cart" />
</navigation>